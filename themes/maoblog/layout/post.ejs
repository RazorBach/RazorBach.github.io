<main>
  <div class="main-container">
      <div class="post-details">
          <% if (is_post()) { %>
            <div class="post-title">
              <h1><%= page.title %></h1>
            </div>
          <% } %>
          <div class="post-content">
            <%- page.content %>
          </div>
          <% if(theme.meta.enable) {%>
            <div class="dot-line"></div>
            <div class="post-meta">
              <div class="post-date">
                <i class="fa fa-calendar"></i>&nbsp;&nbsp;<span class="post-date"><%= date(page.date, 'YYYY/MM/DD') %></span>
              </div>
              <div class="post-tags">
                <% if(page.tags.length == 0) { %>
                  <div class="tag-item">
                    <a href="#"><i class="fa fa-tag"></i>&nbsp;&nbsp;Untagged</a>
                  </div>
                <% }
                else { %> 
                  <% page.tags.each(function(tag) { %>
                    <div class="tag-item">
                      <a href="<%- url_for(tag.path) %>"><i class="fa fa-tag"></i>&nbsp;&nbsp;<%= tag.name %></a>
                    </div>
                  <%})%>
                <% } %>
              </div>
            </div>
          <%} %>
      </div>
  </div>
</main>
<% if (config.disqus_enabled && config.disqus_shortname){ %>
  <section id="comments">
  <div id="disqus_thread"></div>
  <script>
  (function() {
  var d = document, s = d.createElement('script');
  s.src = 'https://<%= config.disqus_shortname %>.disqus.com/embed.js';
  s.setAttribute('data-timestamp', +new Date());
  (d.head || d.body).appendChild(s);
  })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </section>
  <% } %>
